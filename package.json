{
	"name": "@rodneylab/sveltekit-components",
	"description": "Handy components for building sites in SvelteKit",
	"version": "1.0.1",
	"author": "Rodney Lab <ask@rodneylab.com> (@rodneyLab)",
	"license": "BSD-3-Clause",
	"keywords": [
		"svelte",
		"sveltekit",
		"map",
		"mapbox",
		"openstreetmap"
	],
	"svelte": "index.js",
	"scripts": {
		"dev": "vite dev --https",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json --fail-on-hints --ignore package",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write --plugin-search-dir=. .",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"prepare": "husky install",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"svelte-check": "svelte-check --fail-on-hints --ignore package"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@sveltejs/adapter-static": "^1.0.0-next.43",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "1.0.0-next.5",
		"@types/leaflet": "^1.8.0",
		"@types/node": "^18.7.18",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"@vitejs/plugin-basic-ssl": "^0.1.2",
		"dotenv": "^16.0.2",
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"leaflet": "^1.9.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.18",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-components"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-components/issues"
	},
	"type": "module",
	"peerDependencies": {
		"leaflet": "^1.8.0",
		"vite": "^3.1.0-beta.1"
	}
}
