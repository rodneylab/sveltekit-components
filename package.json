{
	"name": "@rodneylab/sveltekit-components",
	"description": "Handy components for building sites in SvelteKit",
	"version": "3.0.2",
	"author": "Rodney Lab <ask@rodneylab.com> (@rodneyLab)",
	"license": "BSD-3-Clause",
	"keywords": [
		"svelte",
		"sveltekit",
		"map",
		"mapbox",
		"openstreetmap"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write --plugin=prettier-plugin-svelte .",
		"lint": "prettier --check --plugin=prettier-plugin-svelte . && eslint .",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte ."
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.20.1",
		"@sveltejs/package": "2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.13.10",
		"@typescript-eslint/eslint-plugin": "^8.27.0",
		"@typescript-eslint/parser": "^8.27.0",
		"@vitejs/plugin-basic-ssl": "^2.0.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.3.3",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.23.2",
		"svelte-check": "^4.1.5",
		"svelte-preprocess": "^6.0.3",
		"svelte2tsx": "^0.7.35",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2",
		"vite": "^6.2.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-components"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-components/issues"
	},
	"type": "module",
	"peerDependencies": {
		"svelte": ">=5 <6"
	},
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"svelte-preprocess"
		]
	}
}
