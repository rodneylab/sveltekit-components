{
	"name": "@rodneylab/sveltekit-components",
	"description": "Handy components for building sites in SvelteKit",
	"version": "2.0.1",
	"author": "Rodney Lab <ask@rodneylab.com> (@rodneyLab)",
	"license": "BSD-3-Clause",
	"keywords": [
		"svelte",
		"sveltekit",
		"map",
		"mapbox",
		"openstreetmap"
	],
	"scripts": {
		"dev": "vite dev --https",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-hints --ignore package",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write --plugin-search-dir=. .",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"prepare": "husky install",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"svelte-check": "svelte-check --fail-on-hints --ignore package"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.5.0",
		"@commitlint/config-conventional": "^17.4.4",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.14.0",
		"@sveltejs/package": "2.0.2",
		"@types/node": "^18.15.10",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vitejs/plugin-basic-ssl": "^1.0.1",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"svelte-preprocess": "^5.0.3",
		"svelte2tsx": "^0.6.10",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2",
		"vite": "^4.2.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-components"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-components/issues"
	},
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		".package.json": "./package.json",
		"./EmailInputField.svelte": "./dist/EmailInputField.svelte",
		"./Image.svelte": "./dist/Image.svelte",
		"./InputField.svelte": "./dist/Image.svelte",
		"./PasswordInputField.svelte": "./dist/PasswordInputField.svelte",
		"./TextArea.svelte": "./dist/TextArea.svelte",
		"./TextInputField.svelte": "./dist/TextInputField.svelte"
	},
	"peerDependencies": {
		"svelte": "^3.57.0"
	},
	"svelte": "./dist/index.js"
}
