{
	"name": "@rodneylab/sveltekit-components",
	"description": "Handy components for building sites in SvelteKit",
	"version": "3.0.0",
	"author": "Rodney Lab <ask@rodneylab.com> (@rodneyLab)",
	"license": "BSD-3-Clause",
	"keywords": [
		"svelte",
		"sveltekit",
		"map",
		"mapbox",
		"openstreetmap"
	],
	"scripts": {
		"dev": "vite dev --https",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-hints --ignore package",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write --plugin-search-dir=. .",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"prepare": "husky install",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"svelte-check": "svelte-check --fail-on-hints --ignore package"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.5",
		"@sveltejs/package": "2.1.0",
		"@types/node": "^20.3.1",
		"@typescript-eslint/eslint-plugin": "^5.60.0",
		"@typescript-eslint/parser": "^5.60.0",
		"@vitejs/plugin-basic-ssl": "^1.0.1",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.4",
		"svelte-preprocess": "^5.0.4",
		"svelte2tsx": "^0.6.16",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-components"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-components/issues"
	},
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		".package.json": "./package.json",
		"./EmailInputField.svelte": "./dist/EmailInputField.svelte",
		"./Image.svelte": "./dist/Image.svelte",
		"./InputField.svelte": "./dist/Image.svelte",
		"./PasswordInputField.svelte": "./dist/PasswordInputField.svelte",
		"./TextArea.svelte": "./dist/TextArea.svelte",
		"./TextInputField.svelte": "./dist/TextInputField.svelte"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": ">=3 <5"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
